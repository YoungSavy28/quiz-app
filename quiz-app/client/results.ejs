<%- include('partials/header') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Quiz Results</title>

  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
 
  <link rel="stylesheet" href="/static/css/style.css" />

  <!-- Bootstrap JS Bundle (for dropdowns, etc.) -->
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
    defer
  ></script>

  <style>
    /* Scrollable results if too many items */
    .results-scroll {
      max-height: 400px;
      overflow-y: auto;
    }
  </style>
</head>
<body>
  <!-- VANTA animated background -->
  <div class="vanta-bg"></div>

  <!-- Main results container -->
  <div class="container-fluid content-wrapper py-5">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-10 col-md-8 col-lg-6">
        <div class="card bg-transparent border-0">
          <div class="card-body text-white">

            <h2 class="text-center mb-4 display-4">Your Score: <span id="score">0 / 0</span></h2>

            <!-- Scrollable area for long lists -->
            <div class="results-scroll mb-4">
              <ul id="results-list" class="list-group">
                <!-- JS will inject <li> items here -->
              </ul>
            </div>

            <div class="text-center">
              <button id="play-again" class="btn btn-primary btn-lg">
                Play Again
              </button>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Background music + toggle at bottom-right -->
  <audio id="bg-music" loop>
    <source src="/static/music/DTMF.mp3" type="audio/mpeg" />
  </audio>
  <button
    id="music-toggle"
    class="btn btn-light position-fixed"
    style="bottom:1rem; right:1rem; z-index:2;"
  >
    ðŸ”‡
  </button>

  <!-- Three.js & VANTA.js -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r121/three.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.halo.min.js"></script>
  <script src="/static/js/vanta.js"></script>

  <!-- Main client logic -->
  <script src="/static/js/app.js"></script>
</body>
</html>
