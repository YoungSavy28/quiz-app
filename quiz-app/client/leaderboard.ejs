
<%- include('partials/header') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Leaderboard</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >
  <link rel="stylesheet" href="/static/css/style.css">
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
    defer
  ></script>
</head>
<body>
  <div class="vanta-bg"></div>
  <div class="container-fluid content-wrapper py-5">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-10 col-md-8 col-lg-6">
        <div class="card bg-transparent border-0">
          <div class="card-body text-white">
            <h2 class="text-center mb-4">Top 10 Leaderboard</h2>
            <div class="table-responsive">
              <table class="table table-dark table-striped">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Player</th>
                    <th>Score</th>
                    <th>Category</th>
                    <th>Time (s)</th>
                    <th>Date</th>
                  </tr>
                </thead>
                <tbody>
                  <% top.forEach((entry, idx) => { %>
                    <tr>
                      <th><%= idx + 1 %></th>
                      <td><%= entry.userName %></td>
                      <td><%= entry.score %></td>
                      <td><%= entry.category %></td>
                      <td><%= Math.floor(entry.duration / 1000) %></td>
                      <td><%= new Date(entry.date).toLocaleString() %></td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
            <div class="text-center mt-4">
              <a href="/" class="btn btn-primary">Back to Home</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <audio id="bg-music" loop>
    <source src="/static/music/DTMF.mp3" type="audio/mpeg">
  </audio>
  <button
    id="music-toggle"
    class="btn btn-light position-fixed"
    style="top:1rem; right:1rem; z-index:2;"
  >ðŸ”‡</button>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r121/three.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.halo.min.js"></script>
  <script src="/static/js/vanta.js"></script>
  <script src="/static/js/app.js"></script>
</body>
</html>
