<%- include('partials/header') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Welcome to the Quiz</title>

  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <!-- Your custom styles -->
  <link rel="stylesheet" href="/static/css/style.css" />

  <!-- Google Font: Poppins -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
  href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap"
  rel="stylesheet"
  />

  <!-- Bootstrap JS Bundle (for dropdowns, etc.) -->
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
    defer
  ></script>
</head>
<body>
  <!-- VANTA animated background -->
  <div class="vanta-bg"></div>

  <!-- Center everything -->
  <div class="container-fluid content-wrapper vh-100 d-flex justify-content-center align-items-center">
    <div class="text-center text-white w-100" style="max-width: 400px;">
      <h1 class="display-4 mb-3">Welcome to the Quiz</h1>
      <p class="lead mb-4">Letâ€™s see if you know ball.</p>

      <!-- Vertical form, centered -->
      <form id="settings-form" class="d-flex flex-column align-items-center gap-3">
        <!-- Questions input-group -->
        <div class="input-group w-100">
          <span class="input-group-text">Questions:</span>
          <input
            type="number"
            id="amount"
            class="form-control"
            placeholder="Pick a number"
            min="1"
            max="50"
          />
        </div>

        <!-- Category Picker -->
        <select id="category" class="form-select w-100">
          <option value="">Any Category</option>
        </select>

        <!-- Start Quiz Button -->
        <button type="button" id="start-btn" class="btn btn-primary btn-lg w-100">
          Start Quiz
        </button>
      </form>
    </div>
  </div>

  <!-- Background music + toggle at bottom-right -->
  <audio id="bg-music" loop>
    <source src="/static/music/DTMF.mp3" type="audio/mpeg" />
  </audio>
  <button
    id="music-toggle"
    class="btn btn-light position-fixed"
    style="bottom:1rem; right:1rem; z-index:2;"
  >
    ðŸ”‡
  </button>

  <!-- Three.js & VANTA.js -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r121/three.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.halo.min.js"></script>
  <script src="/static/js/vanta.js"></script>

  <!-- Main client logic -->
  <script src="/static/js/app.js"></script>
</body>
</html>
