<%- include('partials/header') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Quiz</title>

  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />

  <!-- Google Font: Poppins -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap"
    rel="stylesheet"
  />

  <!-- Your custom styles (imports Poppins too) -->
  <link rel="stylesheet" href="/static/css/style.css" />

  <!-- Bootstrap JS Bundle -->
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
    defer
  ></script>

  <style>
    /* Ensure this page uses Poppins */
    body, h2, .btn, .option-btn {
      font-family: 'Poppins', sans-serif !important;
    }
  </style>
</head>
<body>
  <!-- VANTA background -->
  <div class="vanta-bg"></div>

  <!-- Quiz container -->
  <div
    id="quiz-container"
    class="container-fluid content-wrapper py-5"
    data-category="<%= category %>"
    data-amount="<%= amount %>"
  >
    <div class="row justify-content-center">
      <div class="col-12 col-sm-10 col-md-8 col-lg-6">
        <div class="card bg-transparent border-0 text-center">
          <div class="card-body">
            <div id="timer" class="mb-3 fs-4 text-white">
              Time: <span id="time-left">30s</span>
            </div>
            <h2 id="question-text" class="mb-4 text-white">
              Loading questionâ€¦
            </h2>

            <div id="options" class="btn-group-vertical w-100" role="group">
              <button class="btn btn-primary btn-lg mb-2 option-btn"></button>
              <button class="btn btn-primary btn-lg mb-2 option-btn"></button>
              <button class="btn btn-primary btn-lg mb-2 option-btn"></button>
              <button class="btn btn-primary btn-lg mb-2 option-btn"></button>
            </div>

            <button
              id="next-btn"
              class="btn btn-secondary mt-4"
              style="max-width: 160px; display: none;"
            >
              Next
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Background music + toggle now at bottom-right -->
  <audio id="bg-music" loop>
    <source src="/static/music/DTMF.mp3" type="audio/mpeg" />
  </audio>
  <button
    id="music-toggle"
    class="btn btn-light position-fixed"
    style="bottom:1rem; right:1rem; z-index:2;"
  >
    ðŸ”‡
  </button>

  <!-- Three.js & VANTA.js -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r121/three.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.halo.min.js"></script>
  <script src="/static/js/vanta.js"></script>

  <!-- Pass config into app.js -->
  <script>
    window.quizConfig = {
      category: document.getElementById('quiz-container').dataset.category,
      amount: document.getElementById('quiz-container').dataset.amount
    };
  </script>

  <!-- Main quiz logic -->
  <script src="/static/js/app.js"></script>
</body>
</html>
