<%- include('partials/header') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>My Profile | Quiz App</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom Styles -->
  <link rel="stylesheet" href="/static/css/style.css">
</head>
<body>

  <div class="vanta-bg"></div>

  <main class="container py-5 text-white">
    <h1><%= user.username %>â€™s Play History</h1>
    <% if (!scores || scores.length === 0) { %>
      <p>You havenâ€™t played any quizzes yet. <a href="/">Start one now!</a></p>
    <% } else { %>
      <table class="table table-dark table-striped mt-4">
        <thead>
          <tr>
            <th>Date</th>
            <th>Category</th>
            <th>Score</th>
            <th>Time (s)</th>
          </tr>
        </thead>
        <tbody>
          <% scores.forEach(s => { %>
            <tr>
              <td><%= new Date(s.date).toLocaleString() %></td>
              <td><%= s.category %></td>
              <td><%= s.score %>/10</td>
              <td><%= Math.floor(s.duration/1000) %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </main>

  <!-- audio + toggle -->
  <audio id="bg-music" loop>
    <source src="/static/music/DTMF.mp3" type="audio/mpeg">
  </audio>
  <button id="music-toggle" class="btn btn-light position-fixed" style="top:1rem; right:1rem; z-index:2;">
    ðŸ”‡
  </button>

  <!-- Three.js & VANTA.js -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r121/three.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.halo.min.js"></script>
  <script src="/static/js/vanta.js"></script>
</body>
</html>
